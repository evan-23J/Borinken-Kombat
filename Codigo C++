                                    goto roundend;
                                    
                                }

                                break;
                            }
                            else if (player1 == 2) {
                                stats2[0] = stats2[0] - 35;
                                cout << "P1 HP:" << stats2[0] << endl;
                                hp1 = stats2[0];

                                if (hp1 <= 0) {
                                    cout << "PLAYER 2 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }
                                else if (hp2 <= 0) {
                                    cout << "PLAYER 1 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }

                                break;
                            }
                            else if (player1 == 3) {
                                stats3[0] = stats3[0] - 35;
                                cout << "P1 HP:" << stats3[0] << endl;
                                hp1 = stats3[0];

                                if (hp1 <= 0) {
                                    cout << "PLAYER 2 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }
                                else if (hp2 <= 0) {
                                    cout << "PLAYER 1 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }

                                break;
                            }


                        }


                        if (attack1 == 2) {
                            if (player1 = 1) {
                                stats1[0] = stats1[0] - 25;
                                cout << "P1 HP:" << stats1[0] << endl;
                                hp1 = stats1[0];

                                if (hp1 <= 0) {
                                    cout << "PLAYER 2 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }
                                else if (hp2 <= 0) {
                                    cout << "PLAYER 1 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }

                                break;
                            }
                            else if (player1 == 2) {
                                stats2[0] = stats2[0] - 25;
                                cout << "P1 HP:" << stats2[0] << endl;
                                hp1 = stats2[0];

                                if (hp1 <= 0) {
                                    cout << "PLAYER 2 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }
                                else if (hp2 <= 0) {
                                    cout << "PLAYER 1 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }

                                break;
                            }
                            else if (player1 == 3) {
                                stats3[0] = stats3[0] - 25;
                                cout << "P1 HP:" << stats3[0] << endl;
                                hp1 = stats3[0];

                                if (hp1 <= 0) {
                                    cout << "PLAYER 2 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }
                                else if (hp2 <= 0) {
                                    cout << "PLAYER 1 WINS!! \n";
                                    repeat = false;
                                    goto roundend;
                                    
                                }

                                break;
                            }


                        }



                    }
                }






            }
            musicBattle.stop();

            // con este es el codigo que se ejecuta al llegar a "goto". Aqui se le permite al usuario elegir si desea jugar otra vez. - Evan

        roundend:
            cout << "Play again? (Y/N): ";
            cin >> run;
            if (run == 'Y') {
                repeat == true;
            }
            else {
                cout << "Gracias por jugar!";
                repeat == false;
            }

        }



        }
     
    return 0;
}
